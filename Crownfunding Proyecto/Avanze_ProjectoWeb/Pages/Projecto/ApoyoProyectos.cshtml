@page
@model Avanze_ProjectoWeb.Pages.Projecto.ApoyoProyectosModel
@{
    ViewData["Title"] = "Apoyo de Proyectos";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>MultiShop - Online Shop Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">
            <div class="col-lg-5 mb-30 row text-center" style="width:800px">
                <img src="https://www.smartick.es/blog/wp-content/uploads/cuadrado.png">
            </div>

            <div class="col-md-4 h-auto mb-20 row text-center">
                <div class="h-100 bg-light p-30 ">

                    <br />

                    <br>
                    <div class="progress">
                        <span class="progress-text"></span>
                    </div>
                    <br>

                    <p class="mb-4" style="font-size:medium">
                        <b>32000 Bs.</b>

                    </p>
                    <div class="d-flex mb-3">
                        <small>Contribuido de 670000 Bs.</small>

                    </div>
                    <div class="d-flex mb-4">
                        <h2>Contribuir</h2>
                    </div>
                    <div class="d-flex mb-4">
                        <small>Cantidad de Contactos Generados: </small>
                    </div>
                    <div class="d-flex mb-4">
                        <p><b>Networking Generado</b></p>
                    </div>
                    <div class="d-flex mb-4">
                        <input type="checkbox" id="" name="" class="form-check-input" />
                        <label class="form-check-label" for="">
                            No mostrar publicamente mi <br />
                            nombre en la asesoria de esta <br />
                            camapaña
                        </label>
                    </div>
                    <div class="  mb-1 ">
                        <div class="col-10">
                            <button type="submit" value="Aplicar" class="btn btn-primary">Aplicar</button>
                        </div>
                    </div>
                    <div class="d-flex">

                        <div class="col-6">
                            <button type="submit" value="Seguir" class="btn btn-primary">Seguir</button>
                        </div>
                        <div class="col-5">
                            <button type="submit" value="Seguir" class="btn btn-primary">Visitar Social Media</button>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>

    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>
