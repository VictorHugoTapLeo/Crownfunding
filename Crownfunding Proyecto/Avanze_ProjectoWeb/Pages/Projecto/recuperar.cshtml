@page
@model Avanze_ProjectoWeb.Pages.Projecto.recuperarModel
@{
    @if (@CrowdFundingDAO.Model.SessionClass.SessionRole != "")
    {
        Layout = "_LayoutLogin";
    }
    else
    {
        Layout = "_Layout";
    }
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/formSimple.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <div class="box1">
            <h2>Recuperar Contraseña</h2>
            <form method="post">
                <div>
                    <label for="correo">Correo de Cuenta</label><br></br>
                    <input type="email" class="input" id="correo" name="correo" required>
                </div>
                <br>
                <button type="submit" class="button2" name="enviarCorreo" id="restablecimientoContraseña">Enviar Correo</button>
            </form>
        </div>
    </div>
</body>
<script>
    document.getElementById("restablecimientoContraseña").addEventListener("click", function () {
        window.location.href = "/Projecto/restablecimientoContraseña";
    });
</script>