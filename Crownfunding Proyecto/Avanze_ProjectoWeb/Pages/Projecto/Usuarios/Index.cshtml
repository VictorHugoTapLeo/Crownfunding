@page
@model Avanze_ProjectoWeb.Pages.Projecto.Usuarios.IndexModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/tablas.css" asp-append-version="true" />
</head>

<body>
    <h2>Lista de Usuarios</h2>
    <br>

    <table class="styled-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Segundo Apellido</th>
                <th>Nombre de Usuario</th>
                <th>Rol</th>
                <th>Correo Electrónico</th>
                <th>Número de Teléfono</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.name</td>
                    <td>@user.lastName</td>
                    <td>@user.secondLastName</td>
                    <td>@user.userName</td>
                    <td>@user.role</td>
                    <td>@user.email</td>
                    <td>@user.phoneNumber</td>
                    <td>
                        <a asp-page="EditUser" asp-route-id="@user.id" class="btn1">Editar</a>
                        <a asp-page="DetailsUser" asp-route-id="@user.id" class="btn1">Detalles</a>
                        <a asp-page="DeleteUser" asp-route-id="@user.id" class="btn1">Eliminar</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>

</body>

