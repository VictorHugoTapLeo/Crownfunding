@page
@model Avanze_ProjectoWeb.Pages.Projecto.Usuarios.IndexModel
@{
    @if (@CrowdFundingDAO.Model.SessionClass.SessionRole != "")
    {
        Layout = "_LayoutLogin";
    }
    else
    {
        Layout = "_Layout";
    }
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
</head>

<body>
    <h1 class="title">Administracion de</h1>
    <h1 class="title">Usuarios</h1>
    <br></br>

    @foreach (var user in Model.Users)
    {
        <div class="container">
            <div class="header">
                <h2>@user.role</h2>
                <!--<script>-->
                <!--if(@user.role!="Admin"){-->
                <div class="buttons">
                    <a asp-page="EditUser" asp-route-id="@user.id" class="custom-button2">Editar</a>
                    <a asp-page="DetailsUser" asp-route-id="@user.id" class="custom-button2">Detalles</a>
                    <a asp-page="DeleteUser" asp-route-id="@user.id" class="custom-button">Eliminar</a>
                </div>

                <!--</script>-->
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-3">
                        <div>
                            @{
                                var projectPngBytes = user.userPicture;
                                if (projectPngBytes != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(projectPngBytes)" alt="Foto de usuario" style="max-width: 350px; max-height: 350px;" />
                                }
                            }
                        </div>
                    </div>
                    <div class="col-9">
                        <div class="data">
                            <h2>@user.name @user.lastName @user.secondLastName ( @user.userName )</h2>
                            <p>@user.email</p>
                            <p>@user.phoneNumber</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
    }
    
</body>

