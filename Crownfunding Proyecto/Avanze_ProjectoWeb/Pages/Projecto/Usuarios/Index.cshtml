@page
@model Avanze_ProjectoWeb.Pages.Projecto.Usuarios.IndexModel
@{
}
<h2>Lista de Usuarios</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Segundo Apellido</th>
            <th>Nombre de Usuario</th>
            <th>Rol</th>
            <th>Correo Electrónico</th>
            <th>Número de Teléfono</th>
            <!-- Agrega encabezados para las demás propiedades del usuario aquí -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.name</td>
                <td>@user.lastName</td>
                <td>@user.secondLastName</td>
                <td>@user.userName</td>
                <td>@user.role</td>
                <td>@user.email</td>
                <td>@user.phoneNumber</td>
                <td>
                    <a asp-page="EditUser" asp-route-id="@user.id" class="btn btn-info">Editar</a> |
                    <a asp-page="DetailsUser" asp-route-id="@user.id" class="btn btn-info">Detalles</a> |
                    <a asp-page="DeleteUser" asp-route-id="@user.id" class="btn btn-info">Eliminar</a>
                </td>
            </tr>

        }
    </tbody>
</table>
