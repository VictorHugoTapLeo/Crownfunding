@page "{id}"
@model Avanze_ProjectoWeb.Pages.Projecto.Usuarios.DetailsUserModel
@{
}

<h1>Detalles del Usuario</h1>


@if (!string.IsNullOrEmpty(Model.NotFoundMessage))
{
    <div class="alert alert-danger">
        @Model.NotFoundMessage
    </div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.User.id</dd>

        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.User.name</dd>

        <dt class="col-sm-2">Apellido:</dt>
        <dd class="col-sm-10">@Model.User.lastName</dd>

        <dt class="col-sm-2">Correo Electrónico:</dt>
        <dd class="col-sm-10">@Model.User.email</dd>

        <dt class="col-sm-2">Rol:</dt>
        <dd class="col-sm-10">@Model.User.role</dd>

        <dt class="col-sm-2">UserName:</dt>
        <dd class="col-sm-10">@Model.User.userName</dd>

        <dt class="col-sm-2">Teléfono:</dt>
        <dd class="col-sm-10">@Model.User.phoneNumber</dd>


    </dl>
}

<a asp-page="Index">Volver a la lista de usuarios</a>