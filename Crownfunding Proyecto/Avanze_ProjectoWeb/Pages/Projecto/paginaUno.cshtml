        </div>


        <div class="apoyo-item checkbox-label">
            <input class="apoyo-checkbox very" type="checkbox" id="checkbox8" value="08" onclick="actualizarInput(this)">
            <label class="apoyo-label" for="checkbox8">Promoción</label>
        </div>
        <div class="apoyo-item checkbox-label">
            <input class="apoyo-checkbox very" type="checkbox" id="checkbox9" value="09" onclick="actualizarInput(this)">
            <label class="apoyo-label" for="checkbox9">Coaching en habilidades de presentación</label>
        </div>
        <div class="apoyo-item checkbox-label">
            <input class="apoyo-checkbox very" type="checkbox" id="checkbox10" value="10" onclick="actualizarInput(this)">
            <label class="apoyo-label" for="checkbox10">Acceso a recursos financieros no monetarios</label>
        </div>


        <div class="apoyo-item checkbox-label">
            <input class="apoyo-checkbox very" type="checkbox" id="checkbox11" value="11" onclick="actualizarInput(this)">
            <label class="apoyo-label" for="checkbox11">Orientación sobre la estrategia de negocios</label>
        </div>
        <div class="apoyo-item checkbox-label">
            <input class="apoyo-checkbox very" type="checkbox" id="checkbox12" value="12" onclick="actualizarInput(this)">
            <label class="apoyo-label" for="checkbox12">Tiempo y apoyo voluntario</label>
        </div>
        <div class="apoyo-item checkbox-label">
            <input class="apoyo-checkbox very" type="checkbox" id="checkbox13" value="13" onclick="actualizarInput(this)">
            <label class="apoyo-label" for="checkbox13">Reconocimiento y visibilidad</label>
        </div>



        <input class="custom-input" type="text" id="apoyosInput" readonly asp-for="Projecto.ListaApoyos" style="display: none;" />
        <span class="custom-validation" asp-validation-for="Projecto.ListaApoyos"></span>

