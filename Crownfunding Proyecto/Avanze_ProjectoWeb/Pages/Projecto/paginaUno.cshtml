   <script>
        var apoyosAgregados = new Set();

        // Función para agregar un apoyo a la lista de apoyos requeridos
        function agregarApoyo(apoyo) {
            if (!apoyosAgregados.has(apoyo)) {
                apoyosAgregados.add(apoyo);

                var listaApoyos = document.getElementById('apoyosRequeridos');
                var nuevoApoyo = document.createElement('li');
                nuevoApoyo.textContent = apoyo;
                nuevoApoyo.className = 'list-group-item d-flex justify-content-between align-items-center';
                var botonEliminar = document.createElement('button');
                botonEliminar.textContent = 'Eliminar';
                botonEliminar.className = 'btn btn-danger btn-sm';
                botonEliminar.onclick = function () {
                    apoyosAgregados.delete(apoyo);
                    listaApoyos.removeChild(nuevoApoyo);
                };
                nuevoApoyo.appendChild(botonEliminar);
                listaApoyos.appendChild(nuevoApoyo);
            }
        }
    </script>
    <script>
    function validarFormulario() {
        // Valida el campo Título
        var titulo = document.getElementById('Titulo').value;
        if (titulo.trim() === "") {
            alert('Por favor, ingresa un título.');
            return false; // Evita el envío del formulario
        }

        // Valida el campo Descripción General
        var descripcionGeneral = document.getElementById('DescripcionGeneral').value;
        if (descripcionGeneral.trim() === "") {
            alert('Por favor, ingresa una descripción general.');
            return false; // Evita el envío del formulario
        }

        // Valida los apoyos requeridos
        var apoyosRequeridos = document.getElementById('apoyosRequeridos');
        if (apoyosRequeridos.children.length === 0) {
            alert('Por favor, selecciona al menos un apoyo requerido.');
            return false; // Evita el envío del formulario
        }

        // Valida la misión del creador de la campaña
        var mision = document.getElementById('ComentariosMisión').value;
        if (mision.trim() === "") {
            alert('Por favor, ingresa la misión del creador de la campaña.');
            return false; // Evita el envío del formulario
        }

        // Valida la visión de la campaña
        var vision = document.getElementById('Comentarios2Visión').value;
        if (vision.trim() === "") {
            alert('Por favor, ingresa la visión de la campaña.');
            return false; // Evita el envío del formulario
        }

        // Valida sobre ti y/o tu equipo de trabajo
        var sobreTi = document.getElementById('Comentarios3Sobre').value;
        if (sobreTi.trim() === "") {
            alert('Por favor, ingresa información sobre ti y/o tu equipo de trabajo.');
            return false; // Evita el envío del formulario
        }

        // Valida la imagen del proyecto
        var imagenProyecto = document.getElementById('imagenProyecto').value;
        if (imagenProyecto.trim() === "") {
            alert('Por favor, selecciona una imagen para tu proyecto.');
            return false; // Evita el envío del formulario
        }

        // Valida la imagen del producto final
        var imagenProductoFinal = document.getElementById('imagenProductoFinal').value;
        if (imagenProductoFinal.trim() === "") {
            alert('Por favor, selecciona una imagen del producto final.');
            return false; // Evita el envío del formulario
        }

        // Valida la imagen del proceso de producción
        var imagenProcesoProduccion = document.getElementById('imagenProcesoProduccion').value;
        if (imagenProcesoProduccion.trim() === "") {
            alert('Por favor, selecciona una imagen del proceso de producción.');
            return false; // Evita el envío del formulario
        }

        // Valida el link del video de la crowdfunding
        var link = document.getElementById('Link').value;
        if (link.trim() === "") {
            alert('Por favor, ingresa el link del video de la crowdfunding.');
            return false; // Evita el envío del formulario
        }

        // Valida las redes sociales
        var redes = document.getElementById('Redes').value;
        if (redes.trim() === "") {
            alert('Por favor, ingresa al menos una red social.');
            return false; // Evita el envío del formulario
        }

        // Valida la categoría
        var categoria = document.getElementById('Tipo').value;
        if (categoria === "") {
            alert('Por favor, selecciona una categoría.');
            return false; // Evita el envío del formulario
        }

        // Si todas las validaciones pasan, el formulario se enviará
        return true;
    }
</script>